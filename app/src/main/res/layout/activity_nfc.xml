<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom"
    tools:context="com.quickdraw.database.quickdrawdb.NFCActivity">

    <ImageView
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/coins"
        android:id="@+id/backOverlay"
        android:translationZ="-2dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:adjustViewBounds="false" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/qdlogo4"
        android:id="@+id/logo"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/qdlogoname"
        android:id="@+id/logoname"
        android:layout_marginTop="164dp"
        android:layout_alignTop="@+id/logo"
        android:layout_alignStart="@+id/logo" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:srcCompat="@color/white"
        android:id="@+id/infobox"
        android:padding="1dp"
        android:background="@color/colorPrimaryDark"
        android:translationZ="-1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:layout_alignParentTop="true"
        android:id="@+id/NFCBackButton"
        android:layout_alignParentStart="true"
        android:layout_width="50dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NFCDescription"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/infobox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>
